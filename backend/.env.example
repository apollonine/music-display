# Spotify API Credentials (leave empty to use other sources)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=http://localhost:8000/callback

# Last.fm API (get free key at https://www.last.fm/api/account/create)
# Works with any music source that scrobbles to Last.fm
LASTFM_API_KEY=
LASTFM_USERNAME=

# AcoustID API Key (for audio fingerprinting - get at https://acoustid.org/new-application)
# Required for microphone-based track identification (vinyl, CD, etc.)
ACOUSTID_API_KEY=

# Audio Listener (set to true to enable microphone-based track detection)
# Requires: PyAudio, chromaprint (fpcalc), and ACOUSTID_API_KEY
ENABLE_AUDIO_LISTENER=false

# Server Config
HOST=0.0.0.0
PORT=8000
DEBUG=true
